{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["templates", "unxip"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "YCode",
  "mainBinaryName": "YCode",
  "version": "0.0.0",
  "identifier": "me.nabdev.ycode",
  "plugins": {},
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "YCode",
        "label": "main",
        "width": 1000,
        "height": 700,
        "useHttpsScheme": true,
        "visible": true,
        "url": "/onboarding"
      },
      {
        "title": "YCode (Loading)",
        "label": "splashscreen",
        "url": "/splash.html",
        "width": 200,
        "height": 250,
        "resizable": false,
        "decorations": false,
        "fullscreen": false,
        "visible": true,
        "center": true,
        "focus": true
      }
    ]
  }
}
